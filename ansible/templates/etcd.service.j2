# {{ ansible_managed }}

[Unit]
Description=etcd
Documentation=https://github.com/coreos

[Service]
ExecStart=/usr/bin/etcd --name {{ inventory_hostname }} \
  --initial-advertise-peer-urls http://{{ ansible_eth0.ipv4.address }}:2380 \
  --listen-peer-urls http://{{ ansible_eth0.ipv4.address }}:2380 \
  --listen-client-urls http://{{ ansible_eth0.ipv4.address }}:2379,http://127.0.0.1:2379 \
  --advertise-client-urls http://{{ ansible_eth0.ipv4.address }}:2379 \
  --initial-cluster-token etcd-cluster-0 \
  --initial-cluster {% for node in groups['etcd'] %}{{ node }}=http://{{ hostvars[node].ansible_eth0.ipv4.address }}:2380{% if not loop.last %},{% endif %}{% endfor %} \
  --initial-cluster-state new \
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
